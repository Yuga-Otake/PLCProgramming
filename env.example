# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# Sentry Configuration (Self-Healing)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=plc-web-editor
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog Configuration (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# WebSocket Configuration (Collaboration)
NEXT_PUBLIC_WS_URL=ws://localhost:3001
WS_PORT=3001

# Database Configuration (Future)
DATABASE_URL="postgresql://username:password@localhost:5432/plc_editor"

# File Storage Configuration (Future)
NEXT_PUBLIC_STORAGE_BUCKET=plc-files
STORAGE_ACCESS_KEY=your-storage-key
STORAGE_SECRET_KEY=your-storage-secret

# Authentication Configuration (Future)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Feature Flags
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_SELF_HEALING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true 